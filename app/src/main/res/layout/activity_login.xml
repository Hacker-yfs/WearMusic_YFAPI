<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ll_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FAFAFA"
    android:orientation="vertical"
    tools:context=".ui.LoginActivity">

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="match_parent"
        android:layout_height="33dp"
        android:background="@color/colorPrimary"
        android:gravity="center"
        android:text="@string/login"
        android:textColor="#FFFFFF"
        android:textSize="13sp" />

    <ScrollView
        android:id="@+id/sv_qr"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="visible">

        <LinearLayout
            android:id="@+id/ll_qr"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="visible">

            <TextView
                android:id="@+id/tv_second"
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:background="#BF2175F3"
                android:gravity="center"
                android:onClick="zh"
                android:text="@string/loginButton"
                android:textColor="#FFFFFF"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/tv_hint"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:gravity="center"
                android:text="@string/appHint"
                android:textColor="#999999"
                android:textSize="10sp" />

            <RelativeLayout
                android:id="@+id/rv_qrcode"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="5dp"
                android:visibility="visible">

                <ImageView
                    android:id="@+id/iv_qrcode"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:layout_centerHorizontal="true"
                    android:layout_gravity="center"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginBottom="5dp"
                    android:contentDescription="@string/todo"
                    app:srcCompat="@drawable/ic_baseline_photo_size_select_actual_24" />

                <TextView
                    android:id="@+id/tv_err"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:layout_centerHorizontal="true"
                    android:background="#9F000000"
                    android:gravity="center"
                    android:textColor="#FFFFFF"
                    android:textSize="12sp"
                    android:visibility="gone" />

                <ImageView
                    android:id="@+id/iv_err"
                    android:layout_width="40dp"
                    android:layout_height="90dp"
                    android:layout_centerHorizontal="true"
                    android:gravity="center"
                    android:onClick="refresh"
                    android:visibility="gone"
                    app:srcCompat="@drawable/ic_baseline_refresh_24" />

                <TextView
                    android:id="@+id/tv_wait"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:layout_centerHorizontal="true"
                    android:background="#9F000000"
                    android:gravity="center"
                    android:text="@string/wait"
                    android:textColor="#FFFFFF"
                    android:textSize="12sp"
                    android:visibility="gone" />

            </RelativeLayout>


        </LinearLayout>
    </ScrollView>

    <ScrollView
        android:id="@+id/sv_pn"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp">

        <LinearLayout
            android:id="@+id/ll_pn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="visible">

            <TextView
                android:id="@+id/tv_first"
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:background="#BC2175F3"
                android:gravity="center"
                android:onClick="qr"
                android:text="@string/qrcodeButton"
                android:textColor="#FFFFFF"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/tv_PNHint"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="7dp"
                android:gravity="center"
                android:text="@string/tvAppPNHint"
                android:textColor="#999999"
                android:textSize="10sp" />

            <LinearLayout
                android:id="@+id/ll_first"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="3dp"
                android:layout_marginTop="7dp"
                android:layout_marginRight="3dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/iv_first"
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:layout_gravity="center"
                    android:layout_marginEnd="3dp"
                    android:background="@drawable/ic_baseline_brightness_2_24"
                    android:contentDescription="@string/todo"
                    android:padding="4dp"
                    android:scaleType="centerCrop"
                    app:srcCompat="@drawable/ic_baseline_person_24" />

                <LinearLayout
                    android:id="@+id/ll_et_first"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@drawable/et_blue"
                    android:orientation="vertical">

                    <EditText
                        android:id="@+id/et_first"
                        android:layout_width="115dp"
                        android:layout_height="19dp"
                        android:layout_gravity="center"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="8dp"
                        android:layout_marginRight="5dp"
                        android:layout_marginBottom="8dp"
                        android:background="#FAFAFA"
                        android:ems="10"
                        android:hint="@string/phoneHint"
                        android:importantForAutofill="no"
                        android:inputType="text"
                        android:textColor="#2A2B2C"
                        android:textColorHint="#999999"
                        android:textSize="12sp" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_second"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="3dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="3dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/iv_second"
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:layout_gravity="center"
                    android:layout_marginEnd="3dp"
                    android:contentDescription="@string/todo"
                    app:srcCompat="@drawable/ic_baseline_lock_24" />

                <LinearLayout
                    android:id="@+id/ll_et_second"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@drawable/et_blue"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/et_second"
                        android:layout_width="90dp"
                        android:layout_height="19dp"
                        android:layout_gravity="center"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="8dp"
                        android:layout_marginRight="5dp"
                        android:layout_marginBottom="8dp"
                        android:background="#FAFAFA"
                        android:ems="10"
                        android:hint="@string/passwordHint"
                        android:importantForAutofill="no"
                        android:inputType="textPassword"
                        android:textColor="#2A2B2C"
                        android:textColorHint="#999999"
                        android:textSize="12sp" />

                    <ImageView
                        android:id="@+id/iv_eye"
                        android:layout_width="0dp"
                        android:layout_height="20dp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginEnd="5dp"
                        android:layout_weight="1"
                        android:contentDescription="@string/todo"
                        android:onClick="onClick"
                        app:srcCompat="@drawable/ic_baseline_visibility_off_24" />
                </LinearLayout>
            </LinearLayout>

            <Button
                android:id="@+id/btn_login"
                android:layout_width="74dp"
                android:layout_height="36dp"
                android:layout_gravity="center"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:background="@drawable/btn_blue"
                android:gravity="center"
                android:onClick="onClick"
                android:text="@string/login"
                android:textColor="#FFFFFF" />

        </LinearLayout>


    </ScrollView>


</LinearLayout>