<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ll_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FAFAFA"
    android:orientation="vertical"
    tools:context=".ui.ConsoleActivity">


    <TextView
        android:id="@+id/tv_title"
        android:layout_width="match_parent"
        android:layout_height="33dp"
        android:background="@color/colorPrimary"
        android:gravity="center"
        android:text="@string/console"
        android:textColor="#FFFFFF"
        android:textSize="13sp" />

    <LinearLayout
        android:id="@+id/ll_outmain"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="5dp"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/ll_first"
            android:layout_width="135dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:divider="@drawable/middle_ss"
            android:orientation="horizontal"
            android:showDividers="middle">

            <ImageView
                android:id="@+id/iv_voiceDown"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:background="?android:attr/selectableItemBackgroundBorderless"
                android:contentDescription="@string/todo"
                android:onClick="voice_down"
                android:theme="@style/RippleWhite"
                app:srcCompat="@drawable/ic_baseline_volume_mute_24" />

            <ImageView
                android:id="@+id/iv_download"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:background="?android:attr/selectableItemBackgroundBorderless"
                android:contentDescription="@string/todo"
                android:onClick="download"
                android:theme="@style/RippleWhite"
                app:srcCompat="@drawable/ic_baseline_cloud_download_24" />

            <ImageView
                android:id="@+id/iv_voiceUp"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:background="?android:attr/selectableItemBackgroundBorderless"
                android:contentDescription="@string/todo"
                android:maxWidth="40dp"
                android:maxHeight="40dp"
                android:minWidth="40dp"
                android:minHeight="40dp"
                android:onClick="voice_up"
                android:theme="@style/RippleWhite"
                app:srcCompat="@drawable/ic_baseline_volume_up_24" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_second"
            android:layout_width="135dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:divider="@drawable/middle_ss"
            android:orientation="horizontal"
            android:showDividers="middle"
            tools:visibility="visible">

            <ImageView
                android:id="@+id/iv_like"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:background="?android:attr/selectableItemBackgroundBorderless"
                android:contentDescription="@string/todo"
                android:onClick="like"
                android:theme="@style/RippleWhite"
                app:srcCompat="@drawable/ic_baseline_favorite_border_24" />

            <ImageView
                android:id="@+id/iv_message"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:background="?android:attr/selectableItemBackgroundBorderless"
                android:contentDescription="@string/todo"
                android:onClick="message"
                android:theme="@style/RippleWhite"
                app:srcCompat="@drawable/ic_baseline_message_24" />

            <ImageView
                android:id="@+id/iv_share"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:background="?android:attr/selectableItemBackgroundBorderless"
                android:contentDescription="@string/todo"
                android:maxWidth="40dp"
                android:maxHeight="40dp"
                android:minWidth="40dp"
                android:minHeight="40dp"
                android:onClick="share"
                android:theme="@style/RippleWhite"
                app:srcCompat="@drawable/ic_baseline_share_24" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_third"
            android:layout_width="135dp"
            android:layout_height="35dp"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:divider="@drawable/middle_ss"
            android:orientation="horizontal"
            android:showDividers="middle"
            tools:visibility="visible">

            <ImageView
                android:id="@+id/mv_view"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:layout_marginStart="50dp"
                android:background="?android:attr/selectableItemBackgroundBorderless"
                android:contentDescription="@string/todo"
                android:onClick="mv"
                android:theme="@style/RippleWhite"
                app:srcCompat="@drawable/ic_baseline_music_video_24" />

        </LinearLayout>
    </LinearLayout>


</LinearLayout>